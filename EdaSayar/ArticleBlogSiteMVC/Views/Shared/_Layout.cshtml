	<!--//header-->
	<!--/banner-->
	<div class="banner">
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="3" class="active"></li>
			</ol>
			
			<div class="carousel-inner" role="listbox">

				@foreach (var article in Model)
				{
					<div class="carousel-item">
						<div class="carousel-caption">
							<img src="@article.Image" class="card-img-top" alt="@article.Image">
							<h4>
								@article.Title
								
							</h4>
							<div class="read">
								<a asp-action="Index" asp-controller="Article" asp-area="Admin" class="btn btn-primary read-m">Daha Fazla</a>
							</div>
							
							
						</div>
						
					</div>
				}
				<style>
					.carousel-item img {
						max-width: 100%; /* Resmi Carousel genişliği kadar sınırla */
						height: contain; /* Otomatik yükseklik ayarı, oranları korur */
						margin: 0 auto; /* Resmi yatayda ortala */
						display: block; /* Resmi blok element olarak görüntüle */
					}
				</style>

				
				
				<div class="carousel-item item4 active">
					<img src="/images/en-iyi-blog-siteleri-1.webp" class="card-img-top" alt="...">
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
