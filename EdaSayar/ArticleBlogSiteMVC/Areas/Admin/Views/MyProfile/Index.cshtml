@model AppUserVM
@* @{
    Layout = null;
} *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili - Bilgi Atlası</title>
    <!-- Bootstrap CSS eklemek -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Özel CSS stilleri */
        body {
            background-color: #25373D;
            
        }

       
        .profil {
            background-color: #FCB941;
            padding: 80px;
            margin: 20px auto;
            border-radius: 60px;
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.2);
        }

        .profil-resim {
            max-width: 150px;
            border-radius: 100%;
            margin: 0 auto 20px;
            display: block;
        }

        .baslik {
            color: #25373D;
        }

        .makale-listesi {
            margin-top: 60px;
        }

        .makale {
            background-color: #FCB941;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>



<body>
    <h1>Yazar Profili Güncelleme</h1>
    <form id="profil-form">
        <label for="ad">Ad:</label>
        <input type="text" asp-for="@Model.FirstName" ><br><br>

        <label for="soyad">Soyad:</label>
        <input type="text" asp-for="@Model.LastName"><br><br>

        <label for="email">E-posta Adresi:</label>
        <input type="email" asp-for="@Model.Email"><br><br>

        <label for="sifre">Şifre:</label>
        <input type="password" asp-for="@Model.Password"><br><br>

        <label for="resim">Profil Resmi:</label>
        <input type="file" id="resim" name="resim"><br><br>

        <input type="submit" value="Güncelle">
    </form>
    <script src="script.js"></script>

    <!-- Bootstrap JS ve jQuery eklemek (isteğe bağlı) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>



